
; ------------------------------------------------------------------------------
; ■ 107 遭遇時会話：勧誘成功
; ------------------------------------------------------------------------------
; 遭遇時会話：勧誘成功 は主人公時のみ呼び出されるので判定はそれに準じて

; □ 0 通常
@KOJO_27_0_SYSTEM_MESSAGE_107_X_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_MODE
	CASEELSE
		CALL KOJO_27_0_ADD_MESSAGE, @"（よっし！　仲間ゲット！）\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「これで少し楽になるわ～」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「そうそう、小さなウサギを助ければもっと幸せになれますよー」\n"
	ENDSELECT
	
	; 相手の初期戦闘素質が、自分の初期戦闘素質より低いなら追加口上
	IF ABL:(ARG:1):98 < ABL:98
		CALL KOJO_27_0_ADD_MESSAGE, @"（あんま強そうじゃないけど、贅沢は言ってられないか）\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"（ま、人数は多い方がいいよね）\n"
	ENDIF
	
	
	; 2人目勧誘成功なら追加口上
	IF GET_MEMBER_SUM() == 1
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「仲間も増えた事だし、こんなダンジョンとっとと攻略しちゃいましょ」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「か弱いウサギ一匹じゃ、どうしようもなくて困ってたのよー」\n"
		ENDSELECT
		
		; 相手の初期戦闘素質が、自分の初期戦闘素質より低いなら追加口上
		IF ABL:(ARG:1):98 < ABL:98
			CALL KOJO_27_0_ADD_MESSAGE, @"（ま、一人よりはマシかな……）\n"
		ENDIF
	ENDIF
	
	; 3人目勧誘成なら追加口上
	IF GET_MEMBER_SUM() == 2
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「一人よりも二人、二人よりも三人ってね♪」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「人数が揃うと心強い」\n"
		ENDSELECT
	ENDIF
	
	; キャラクター対応 追加口上
	SELECTCASE NO:(ARG:1)
	; 鈴仙
	CASE 28
		CALL KOJO_27_0_ADD_MESSAGE, @"「%KOJO_27_0_CALLNAME_FROM_ID(GET_ID_FROM_NO(NO:(ARG:1)))%が一緒なら色々と便利よね\n　まず囮でしょ？　それに罠感知とか、毒味とか！」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「眼が使い物にならない%KOJO_27_0_CALLNAME_FROM_ID(GET_ID_FROM_NO(NO:(ARG:1)))%ってアレよね、騙され役……」\n"
	; 永琳
	CASE 29
		CALL KOJO_27_0_ADD_MESSAGE, @"（心強い反面、危険も増えた気がする……）\n"
	; 輝夜
	CASE 30
		CALL KOJO_27_0_ADD_MESSAGE, @"「こんな場所に迷い込んでるのに、姫様ってすごいマイペースですよね\n　ああ、もちろんいい意味で」\n"
	ENDSELECT
RETURN 1


; □ 1 喪失キャラを連れていく
@KOJO_27_0_SYSTEM_MESSAGE_107_X_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_MODE
	CASEELSE
		CALL KOJO_27_0_ADD_MESSAGE, @"「こっちも余裕あるわけじゃないし、連れてくだけありがたいと思いなさいよ」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「このまま放置しといても良くないだろうし……」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「連れて行くにしろ、安全な場所に運ばないと……」\n"
	ENDSELECT
	
	; 相手の初期戦闘素質が、自分の初期戦闘素質より低いなら追加口上
	IF ABL:(ARG:1):98 < ABL:98
		CALL KOJO_27_0_ADD_MESSAGE, @"（いざとなったら置いていけばいいか……）\n"
	ENDIF
	
	
	; 2人目勧誘成功なら追加口上
	IF GET_MEMBER_SUM() == 1
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「回復してあげられれば、一人で動きまわるよりいいわよね」\n"
		ENDSELECT
	ENDIF
	
	; 3人目勧誘成なら追加口上
	IF GET_MEMBER_SUM() == 2
		; 現在PTに居る仲間は行動可能
		IF CHECK_FINE(FLAG:10)
			SELECTCASE KOJO_MODE
			CASEELSE
				CALL KOJO_27_0_ADD_MESSAGE, @"「ねえ%KOJO_27_0_CALLNAME_FROM_ID(GET_ID_FROM_NO(NO:(FLAG:10)))%、折角だから連れて行ってあげようよ」\n"
			ENDSELECT
			
		; 現在PTに居る仲間は行動不能
		ELSE
			SELECTCASE KOJO_MODE
			CASEELSE
				CALL KOJO_27_0_ADD_MESSAGE, @"「あたしってお人好しねー、自分から新しいお荷物を背負い込むんだもの」\n\d%CALLNAME:TARGET%は行動不能に陥った%CALLNAME:(FLAG:10)%に続き、力尽きた%ARGS:1%の手を握った\d\n"
			ENDSELECT
			
			; 相手の初期戦闘素質が、自分の初期戦闘素質より低いなら追加口上
			IF ABL:(ARG:1):98 < ABL:98
				CALL KOJO_27_0_ADD_MESSAGE, @"（まあ、弾除けは多い方がいいか……）\n"
			ENDIF
		ENDIF
	ENDIF
	
	; キャラクター対応 追加口上
	SELECTCASE NO:(ARG:1)
	; 霊夢
	CASE 1
		CALL KOJO_27_0_ADD_MESSAGE, @"「連れてってあげるから、とっとと目を覚まして異変解決してよね」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「目を覚ましさえすれば、最強の助っ人になるはず……」\n"
	; 鈴仙
	CASE 28
		CALL KOJO_27_0_ADD_MESSAGE, @"「こうなった%KOJO_27_0_CALLNAME_FROM_ID(GET_ID_FROM_NO(NO:(ARG:1)))%ってなかなか起きないのよね……」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「%KOJO_27_0_CALLNAME_FROM_ID(GET_ID_FROM_NO(NO:(ARG:1)))%がダウンするって事は、%KOJO_27_0_CALLNAME_FROM_ID(GET_ID_FROM_NO(29))%の折檻並にヤバいのが居るって事でしょ\n　おお怖い怖い」\n"
	ENDSELECT
RETURN 1
