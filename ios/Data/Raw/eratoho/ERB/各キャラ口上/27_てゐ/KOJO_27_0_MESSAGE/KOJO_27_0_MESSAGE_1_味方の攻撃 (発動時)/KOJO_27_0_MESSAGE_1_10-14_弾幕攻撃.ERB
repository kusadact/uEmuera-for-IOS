; □ 10 弾幕攻撃 弱攻撃
@KOJO_27_0_SYSTEM_MESSAGE_1_10(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 汎用口上を読み込む
	CALL KOJO_27_0_SYSTEM_MESSAGE_1_BULLET_ATTACK(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	CALL KOJO_27_0_FIX_MESSAGE
	
	; 残りMP 66%以上
	IF BASE:1 >= (MAXBASE:1 / 100 * 66)
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「塵も積もれば山となるってね！　こんな攻撃でも意味があるはず！」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「威力は低くても、ちゃんと当てていかないとね！」\n"
		ENDSELECT
	
	; 残りMP 33%以上
	ELSEIF BASE:1 >= (MAXBASE:1 / 100 * 33)
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「こんな攻撃でも、ちょっとは効くハズ…っ！」\n"
		ENDSELECT
		
	; 残りMP 0%以上
	ELSEIF BASE:1 >= (MAXBASE:1 / 100 * 0)
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"（あたしの攻撃、ちゃんと効くのかしら…）\n"
		ENDSELECT
	ENDIF
	
	; 2人以上のPTで行動中、他キャラが行動可能なら追加口上
	IF GET_MEMBER_SUM() > 1 && ((TARGET != 1 && CHECK_FINE(TARGET)) || (FLAG:10 && FLAG:10 != TARGET && CHECK_FINE(FLAG:10)) || (FLAG:11 && FLAG:11 != TARGET && CHECK_FINE(FLAG:11)))
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「力の弱いあたしはサポート、確実に当てていかないとね」\n"
		ENDSELECT
	ENDIF
RETURN 1


