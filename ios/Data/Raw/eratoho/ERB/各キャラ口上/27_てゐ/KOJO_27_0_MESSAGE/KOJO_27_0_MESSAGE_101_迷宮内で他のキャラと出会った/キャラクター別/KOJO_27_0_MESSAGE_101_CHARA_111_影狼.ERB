	IF CFLAG:(ARG:1):504
	
	; 遭遇キャラと寸前まで共闘していた
	ELSEIF ARG:1 == PARTY_NO:1 || ARG:1 == PARTY_NO:2
	
	; 通常行動中
	ELSE

	ENDIF
RETURN 1
