
; ------------------------------------------------------------------------------
; ■ 113 探索でアイテムを見つけた - 10 こんぼう
; ------------------------------------------------------------------------------

@KOJO_27_0_SYSTEM_MESSAGE_113_10(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 喪失中は何もしないで帰る
	SIF CFLAG:29
		RETURN 0
	
	; 出来るだけ専用メッセージを見せたいので、優先口上指定
	CALL KOJO_27_0_SET_IMPORTANT_FLAG()
	
	; ゲーム開始直後に探索すると こんぼうが落ちてるらしいな
	IF DAY:0 == 1 && TIME:0 == 0
		CALL KOJO_27_0_ADD_MESSAGE, @"「よくわかんない場所にほっぽり出されて、とりあえず辺りを見渡したら\n　目の前に武器が落ちてるとか、これ見よがし……って感じねー」\n"

	; 普通に見つける
	ELSE
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「化物相手に、こんな棒っきれが役に立つのかしら\n　ちょっとした妖怪なら生身のがマシよね、あたしはか弱い頭脳派だけど」\n"
		ENDSELECT
	ENDIF
RETURN 1
