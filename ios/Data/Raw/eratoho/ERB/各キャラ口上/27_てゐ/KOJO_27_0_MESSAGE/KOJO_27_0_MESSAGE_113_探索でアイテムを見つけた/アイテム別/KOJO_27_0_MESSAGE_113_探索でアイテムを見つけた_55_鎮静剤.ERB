@KOJO_27_0_SYSTEM_MESSAGE_113_55(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 喪失中は何もしないで帰る
	SIF CFLAG:29
		RETURN 0
	
	; 出来るだけ専用メッセージを見せたいので、優先口上指定
	CALL KOJO_27_0_SET_IMPORTANT_FLAG()
	
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_27_0_ADD_MESSAGE, @"「せっかく気持ちいい事するんだから、もっと楽しくなる薬の方がいいわ♥」\n"
	CASE "発情"
		CALL KOJO_27_0_ADD_MESSAGE, @"「この薬……、火照った身体に効果あるかなぁ……」\n"
	CASEELSE
		CALL KOJO_27_0_ADD_MESSAGE, @"「テンション下がりまくりってヤバげな薬じゃあないの？どうしても薬ってだけで身構えちゃうわ……\n　依存性とかないわよね……？」\n"
	ENDSELECT
RETURN 1
