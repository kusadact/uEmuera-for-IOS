
; ------------------------------------------------------------------------------
; ■ 138 遭遇時会話：アイテム強請り開始
; ------------------------------------------------------------------------------

; □ 0 通常交渉
@KOJO_27_0_SYSTEM_MESSAGE_138_X_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; アイテムをあげたばかり
	IF KOJO_27_0_GET_PREV_ARG(0) == 163
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「交換で何かちょうだいよー」\n"
		ENDSELECT
		
	; 通常
	ELSE
		SELECTCASE KOJO_MODE
		CASE "発情"
			CALL KOJO_27_0_ADD_MESSAGE, @"「何かもらえると、助かるんだけど…」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「私に預ければ倍にして返すわよー」\n"
		ENDSELECT
	ENDIF
RETURN 1


; □ 1 喪失キャラから強奪
@KOJO_27_0_SYSTEM_MESSAGE_138_X_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_MODE
	CASEELSE
		CALL KOJO_27_0_ADD_MESSAGE, @"「何か役に立つもの、持ってないかしら…」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「悪いわね、あたしも必死だから…」\n"
	ENDSELECT
RETURN 1
