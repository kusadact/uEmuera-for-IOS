
; ------------------------------------------------------------------------------
; ■ 113 探索でアイテムを見つけた - 39 媚薬
; ------------------------------------------------------------------------------

@KOJO_27_0_SYSTEM_MESSAGE_113_39(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 喪失中は何もしないで帰る
	SIF CFLAG:29
		RETURN 0
	
	; 出来るだけ専用メッセージを見せたいので、優先口上指定
	CALL KOJO_27_0_SET_IMPORTANT_FLAG()
	
	; 初発見
	IF KOJO_27_0_GET_ITEMGET_COUNT(ARG:1) == 0
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「気持よくなれるお薬ね、けっこうイイもの落ちてるじゃない」\n"
		CASE "発情"
			CALL KOJO_27_0_ADD_MESSAGE, @"「ただでさえ身体が火照って大変だってのに……」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「これはちょっと、なんていうか見るからに……」\n"
		ENDSELECT
		
	; 2つめ以降
	ELSE
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「また落ちてるわ、えっちになれるおクスリ♪\n　全部諦めて楽しめって事かしら？」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「またこの薬、ここのヤツラって相当悪趣味よね……」\n"
		ENDSELECT
	ENDIF
RETURN 1
