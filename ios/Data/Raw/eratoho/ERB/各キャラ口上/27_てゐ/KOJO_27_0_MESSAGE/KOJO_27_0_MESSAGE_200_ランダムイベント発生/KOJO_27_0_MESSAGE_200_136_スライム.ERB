; □ 1 服を溶かされた
@KOJO_27_0_SYSTEM_MESSAGE_200_136_1(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; もともと全裸
	IF BASE:CP == 0
		CALL KOJO_27_0_ADD_MESSAGE, @"\dが、もともと服を着ていなかった…\d\n"
		CALL KOJO_27_0_PARAGRAPH_MESSAGE
		
		; PTメンバーにいる
		IF NO:1 == 27 || NO:(FLAG:10) == 27 || NO:(FLAG:11) == 27
			SELECTCASE KOJO_MODE
			CASE "淫乱"
				CALL KOJO_27_0_ADD_MESSAGE, @"「コイツ……ぷるぷるしてて気持ちいいかも……」\n"
			CASEELSE
				CALL KOJO_27_0_ADD_MESSAGE, @"「ぬめぬめして気持ち悪いだけで、特に害はないのかしら？」\n"
			ENDSELECT
			
		; 同室に居て巻き込まれた
		ELSE
			SELECTCASE KOJO_MODE
			CASEELSE
				CALL KOJO_27_0_ADD_MESSAGE, @"「オマケ的に襲われた気がするわ……　ただでさえ服着てないのに……」\n"
			ENDSELECT
		ENDIF

	; 通常
	ELSE
		; PTメンバーにいる
		IF NO:1 == 27 || NO:(FLAG:10) == 27 || NO:(FLAG:11) == 27
			SELECTCASE KOJO_MODE
			CASEELSE
				CALL KOJO_27_0_ADD_MESSAGE, @"「うわわっ！？　なにコイツっ！？　あたしの服になにすんのよー！」\n"
			ENDSELECT
			
		; 同室に居て巻き込まれた
		ELSE
			SELECTCASE KOJO_MODE
			CASEELSE
				CALL KOJO_27_0_ADD_MESSAGE, @"「ちょっと！！　あたし関係ないでしょー！？」\n"
			ENDSELECT
		ENDIF
		
		; 触装中なら追加口上
		IF CFLAG:40
			SELECTCASE KOJO_MODE
			CASE "淫乱"
				CALL KOJO_27_0_ADD_MESSAGE, @"「ええっ？　えっちな服も溶かしちゃうのぉ？\n　気持ちいいなら、えっちな服とヌルヌル両方あってもいいのに～♥」\n"
			CASEELSE
				CALL KOJO_27_0_ADD_MESSAGE, @"「ええっ！？　服溶けてるっ！？　……ってこの服アンタらの同族じゃないの！？\n　あたしは溶けてくれた方が助かるけどっ！」\n"
			ENDSELECT
		ENDIF
	ENDIF
RETURN 1


; □ 2 回避した
@KOJO_27_0_SYSTEM_MESSAGE_200_136_2(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_27_0_ADD_MESSAGE, @"「あらー、つい避けちゃったけど勿体なかったー♥」\n"
	CASE "発情"
		CALL KOJO_27_0_ADD_MESSAGE, @"「き、気付いて良かったぁ……」\n"
	CASE "強気"
		CALL KOJO_27_0_ADD_MESSAGE, @"「不意打ちしたいなら、もうちょっと身の回りに気をつける事ね」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「タイミングが甘い！」\n"
	CASEELSE
		CALL KOJO_27_0_ADD_MESSAGE, @"「うわっ！　あぶなっ！」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「こういう奴等怖いのよね～　服だけ溶かすのから、相手を食べちゃうのまで居るし」\n"
	ENDSELECT
	CALL KOJO_27_0_FIX_MESSAGE
	
	; 全裸なら追加口上
	IF BASE:CP == 0
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「多分服を溶かしちゃうヤツなんだろうけど、あたし何も着てないのよね～♪」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「服を溶かす生き物とか、今のあたしには無意味でしょ\n　そんなに溶かしたいなら、まず溶かす服ちょうだいよ」\n"
		ENDSELECT
	ENDIF
RETURN 1
