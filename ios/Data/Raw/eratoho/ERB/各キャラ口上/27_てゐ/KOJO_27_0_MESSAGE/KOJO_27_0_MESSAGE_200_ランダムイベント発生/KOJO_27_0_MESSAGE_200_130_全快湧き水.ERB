; □ 0 飲んだ
@KOJO_27_0_SYSTEM_MESSAGE_200_130_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_MODE
	CASEELSE
		CALL KOJO_27_0_ADD_MESSAGE, @"「昔話に出てくる傷を癒やす泉ってやつかしら、すっごい効果ね～」\n"
	ENDSELECT
RETURN 1


; □ 1 飲まない
