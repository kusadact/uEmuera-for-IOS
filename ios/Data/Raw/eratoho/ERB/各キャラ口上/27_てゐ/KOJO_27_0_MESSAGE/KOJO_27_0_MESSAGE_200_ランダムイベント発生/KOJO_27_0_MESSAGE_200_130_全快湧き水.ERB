	SELECTCASE KOJO_MODE
	CASEELSE
		CALL KOJO_27_0_ADD_MESSAGE, @"「あやしいものは口にしないに限るわ」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「普通の湧き水なら歓迎だけど、場所が場所だけにねえ」\n"
	ENDSELECT
