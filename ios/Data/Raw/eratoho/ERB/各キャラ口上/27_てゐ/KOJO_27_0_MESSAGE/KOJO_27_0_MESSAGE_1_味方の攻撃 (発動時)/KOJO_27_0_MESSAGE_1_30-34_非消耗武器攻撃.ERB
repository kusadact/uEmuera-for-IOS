; □ 30 非消耗武器攻撃 弱攻撃
@KOJO_27_0_SYSTEM_MESSAGE_1_30(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	; 汎用口上を読み込む
	CALL KOJO_27_0_SYSTEM_MESSAGE_1_DIRECT_ATTACK(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	CALL KOJO_27_0_FIX_MESSAGE
	
	SELECTCASE KOJO_MODE
	CASEELSE
		CALL KOJO_27_0_ADD_MESSAGE, @"「できるだけヒットアンドアウェイで」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「軽く攻撃して、すぐに離れるっ！」\n"
	ENDSELECT
RETURN RESULT


