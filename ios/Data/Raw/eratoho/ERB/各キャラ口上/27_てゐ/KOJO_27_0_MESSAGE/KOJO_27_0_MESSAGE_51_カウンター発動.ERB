
; ------------------------------------------------------------------------------
; ■ 51 カウンター発動
; ------------------------------------------------------------------------------

@KOJO_27_0_SYSTEM_MESSAGE_51(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_27_0_ADD_MESSAGE, @"「そんな動きじゃ、えっちなウサギさんに食べられちゃうわよぉ♪」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「エッチなメス相手だからって、気は抜かないでね♪」\n"
	CASE "弱気"
		CALL KOJO_27_0_ADD_MESSAGE, @"（あたしの力でも、こうすれば……！）\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"（あいての死角から、こう……）\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"（隙が見えた……）\n"
	CASE "強気"
		CALL KOJO_27_0_ADD_MESSAGE, @"「その動き、隙だらけよ！」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「飛んで火に入る夏の虫ぃっ！」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「ふっふっふ！　待ってたわ！」\n"
	CASEELSE
		CALL KOJO_27_0_ADD_MESSAGE, @"「やっぱ、こういうのの方が向いてるわ　あたし」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「小さなウサギだからって、舐めないでよ！」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「そっこだぁっ！」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「スキありぃっ！」\n"
	ENDSELECT
RETURN 1
