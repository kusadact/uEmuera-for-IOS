
; ------------------------------------------------------------------------------
; ■ 104 遭遇時会話：情報交換
; ------------------------------------------------------------------------------

@KOJO_27_0_SYSTEM_MESSAGE_104(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 初日の場合、情報を持ってる風のセリフは違和感があるので分岐
	IF DAY:0 == 1
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「ついさっき気付いたらココに居てさ、何か教えてくれると助かるんだけど」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「情報交換……って言っても、気付いたばっかりでさ\n　ここがどういう場所なのか良くわかんないのよ」\n"
		ENDSELECT
		
	; 2日目以降
	ELSE
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「エッチな情報大歓迎よ♥」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「やらしくない情報と、やらしい情報♪　どっちから聞きたい♪」\n"
		CASE "発情"
			CALL KOJO_27_0_ADD_MESSAGE, @"（あたしなんかの情報、役に立つのかな……）\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「や、役に立つかわからないけど……」\n"
		CASE "強気"
			CALL KOJO_27_0_ADD_MESSAGE, @"「どんな些細な情報だって大事よ、そういう所に脱出のカギがあるかもしれないし」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「そうそう聞いて！　いい情報があるのよ！」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「う～ん、何から話そうかな」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「お客さんいい情報あるよ、こんな時までウソは付かないから安心して」\n"
		ENDSELECT
		
		; 3日目までなら追加口上
		IF DAY:0 <= 3
			SELECTCASE KOJO_MODE
			CASEELSE
				CALL KOJO_27_0_ADD_MESSAGE, @"「まだろくな情報なくてさ、知ってる事何でも教えてくれると助かるわ」\n"
				CALL KOJO_27_0_ADD_MESSAGE, @"「こっちは来たばかりで、交換出来るほど情報ないんだけどさ」\n"
			ENDSELECT
		ENDIF
		
		; DPが高いと遭遇キャラが頬を染める、な追加口上
		IF BASE:DP >= 100
			SELECTCASE KOJO_MODE
			CASE "淫乱"
				CALL KOJO_27_0_ADD_MESSAGE, @"「少し前にエッチな敵に襲われてね♥　あたしは必死で抵抗したんだけど――」\n"
				CALL KOJO_27_0_ADD_MESSAGE, @"「なあに？　あたしの顔に何か付いてる？　それともエッチなニオイが気になるかな？」\n"
			CASE "発情"
				CALL KOJO_27_0_ADD_MESSAGE, @"（やっぱ気付いてるよね、あたしのエッチなニオイ……）\n"
			CASEELSE
				CALL KOJO_27_0_ADD_MESSAGE, @"（こんだけ雌臭いんじゃ仕方ないか……）\n"
			ENDSELECT
		ENDIF
		
		; 好感度別、追加口上
		; 好感度:低
		IF CFLAG:(ARG:1):5 < 0
			SELECTCASE KOJO_MODE
			CASEELSE
				CALL KOJO_27_0_ADD_MESSAGE, @"（%KOJO_27_0_CALLNAME_FROM_ID(GET_ID_FROM_NO(NO:(ARG:1)))%相手ならウソついてもいいでしょ）\n"
				CALL KOJO_27_0_ADD_MESSAGE, @"（%KOJO_27_0_CALLNAME_FROM_ID(GET_ID_FROM_NO(NO:(ARG:1)))%なんかに本当の事教えてやる必要ないかも……）\n"
				CALL KOJO_27_0_ADD_MESSAGE, @"（実はあんまり信用して無いけどね……）\n"
				CALL KOJO_27_0_ADD_MESSAGE, @"（%KOJO_27_0_CALLNAME_FROM_ID(GET_ID_FROM_NO(NO:(ARG:1)))%の情報なんか、本当に信用出来るのかしら……）\n"
			ENDSELECT
			
		; 好感度:警戒
		ELSEIF CFLAG:(ARG:1):5 < 50
			SELECTCASE KOJO_MODE
			CASEELSE
				CALL KOJO_27_0_ADD_MESSAGE, @"（聞くだけ聞いて、真贋見極めるのは後で）\n"
				CALL KOJO_27_0_ADD_MESSAGE, @"（本当の事言ってるとは限らないから注意しないと……）\n"
			ENDSELECT
			
		; 好感度:通常
		ELSEIF CFLAG:(ARG:1):5 < 200
			SELECTCASE KOJO_MODE
			CASEELSE
			ENDSELECT
			
		; 好感度:高
		ELSEIF CFLAG:(ARG:1):5 >= 200
			SELECTCASE KOJO_MODE
			CASEELSE
				CALL KOJO_27_0_ADD_MESSAGE, @"「助かるわー♪　さっすが%KOJO_27_0_CALLNAME_FROM_ID(GET_ID_FROM_NO(NO:(ARG:1)))%、頼りになる～♪」\n"
			ENDSELECT
		ENDIF
		
		
		; キャラクター対応 追加口上
		SELECTCASE NO:(ARG:1)
		; 霊夢
		CASE 1
			CALL KOJO_27_0_ADD_MESSAGE, @"「『あっ、こいつウソ付いてるな』って顔で見ないでよ」\n"
		; 魔理沙
		CASE 2
			CALL KOJO_27_0_ADD_MESSAGE, @"「『あっ、こいつウソ付いてるな』って顔で見るのやめてくんない」\n"
		; 鈴仙
		CASE 28
			CALL KOJO_27_0_ADD_MESSAGE, @"「%KOJO_27_0_CALLNAME_FROM_ID(GET_ID_FROM_NO(NO:(ARG:1)))%ってすぐ騙されるのよね、この情報はどっちだと思う？」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「%KOJO_27_0_CALLNAME_FROM_ID(GET_ID_FROM_NO(NO:(ARG:1)))%、あたしがウソ付くと思ってない？」\n"
		; 永琳
		CASE 29
			CALL KOJO_27_0_ADD_MESSAGE, @"「%KOJO_27_0_CALLNAME_FROM_ID(GET_ID_FROM_NO(NO:(ARG:1)))%、話半分に聞いてない？」\n"
		ENDSELECT
		
	ENDIF
RETURN 1
