; □ XX 消耗武器攻撃 汎用口上
@KOJO_27_0_SYSTEM_MESSAGE_1_THROW_ATTACK(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 汎用攻撃口上を読み込む
	CALL KOJO_27_0_SYSTEM_MESSAGE_1_VERSATILE_ATTACK(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	CALL KOJO_27_0_FIX_MESSAGE
	
	; 基本口上
	SELECTCASE KOJO_MODE
	CASEELSE
		CALL KOJO_27_0_ADD_MESSAGE, @"「どんな武器でも直接弾幕撃つよりはマシねー」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「やっぱり遠くからぺしぺしする方が性に合うわー\n　罠にかけられれば一番いいんだけどね」\n"
	ENDSELECT

	; 武器別追加口上
	SELECTCASE TFLAG:67
	; 火炎放射器
	CASE 3
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「燃えちゃえー！」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「攻撃するのはいいけど、ヤケドに気をつけないとね」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「この武器、けっこう楽しいかも」\n"
		ENDSELECT
	ENDSELECT
RETURN 1
