; □ 20 消耗武器攻撃 弱攻撃
@KOJO_27_0_SYSTEM_MESSAGE_1_20(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	; 汎用口上を読み込む
	CALL KOJO_27_0_SYSTEM_MESSAGE_1_THROW_ATTACK(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	CALL KOJO_27_0_FIX_MESSAGE
	
	; 2人以上のPTで行動中、他キャラが行動可能なら追加口上
	IF GET_MEMBER_SUM() > 1 && ((TARGET != 1 && CHECK_FINE(TARGET)) || (FLAG:10 && FLAG:10 != TARGET && CHECK_FINE(FLAG:10)) || (FLAG:11 && FLAG:11 != TARGET && CHECK_FINE(FLAG:11)))
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「牽制はまかせて！　離れて攻撃できるうちは強気よ！」\n"
		ENDSELECT
	ENDIF
RETURN 1


