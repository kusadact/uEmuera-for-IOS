	ELSEIF (BASE:CP * 100 / MAXBASE:CP) > 66
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「もう、えっちなんだからぁ♥」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「なぁに？　あたしの服、脱がせたいの？」\n"
		CASE "発情"
