		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「コレじゃあ、動いたらスキマから見えちゃうでしょ♥　えっち♥」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「こんなに穴だらけじゃ、どこからでも犯せるじゃない♥」\n"
		CASE "発情"
			CALL KOJO_27_0_ADD_MESSAGE, @"（身の守りを着実に奪ってく……　このままじゃ……）\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"（こんなボロボロの服じゃ、まともに身を守れない……）\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「ヘンな汁とか飛ばしてくるの一杯居るのよ！？　病気にでもなったらどうしてくれんの！？」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「ちょっと、やめてよ！」\n"
		ENDSELECT
		
	; 服:中破
	ELSE
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「もう服なんていいからぁ♥　焦らさないでぇ♥　はやく……いじめてぇっ……♥♥」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「やぁん♥　そろそろ全部見えちゃう♥」\n"
		CASE "発情"
			CALL KOJO_27_0_ADD_MESSAGE, @"（このまま全部破られたら……あたし……）\n"
		CASEELSE
