			CALL KOJO_27_0_ADD_MESSAGE, @"「こんなボロを破りたがるなんて、どんだけ服にご執心なんだか」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「もうほとんど布なんだから、わざわざ脱がせなくてもいいじゃない……」\n"
		ENDSELECT
