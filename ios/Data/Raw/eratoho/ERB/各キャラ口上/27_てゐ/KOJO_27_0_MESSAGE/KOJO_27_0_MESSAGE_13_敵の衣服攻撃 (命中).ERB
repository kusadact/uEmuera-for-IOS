			CALL KOJO_27_0_ADD_MESSAGE, @"「服だけで済んでマシだった、って考えるべきかな」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「うわっ、なんで服なんで狙ってくるのよー　痛い目にあうよりはマシだけどさー」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「なにすんのよ！？　新品の服だったのにー！！」\n"
		ENDSELECT
		
