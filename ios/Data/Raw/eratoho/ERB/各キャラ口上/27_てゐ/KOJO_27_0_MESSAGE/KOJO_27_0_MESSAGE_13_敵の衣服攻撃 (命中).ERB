@KOJO_27_0_SYSTEM_MESSAGE_13(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 服:大破時は「敵の性攻撃(命中)」を呼び出す
	IF BASE:CP <= 0
		CALL KOJO_27_0_DEPLOY_MESSAGE(14, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:4, 0, 0, 0, "KOJO_27_0_SYSTEM_MESSAGE_")
		RETURN RESULT
