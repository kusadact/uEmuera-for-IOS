			CALL KOJO_27_0_ADD_MESSAGE, @"\d服を破られる事にも気づかず、%CALLNAME:TARGET%はこんこんと眠り続けている\d\n"
		ENDIF
		RETURN 1
	ENDIF
	
	; 催眠中
	IF KOJO_27_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
