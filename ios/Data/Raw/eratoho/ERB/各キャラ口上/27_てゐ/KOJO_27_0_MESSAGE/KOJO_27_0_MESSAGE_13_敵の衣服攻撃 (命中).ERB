			CALL KOJO_27_0_ADD_MESSAGE, @"「ふ……服が……！？」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"（ちゃんとした服を着てたおかげで助かった――？）\n"
		CASE "強気"
