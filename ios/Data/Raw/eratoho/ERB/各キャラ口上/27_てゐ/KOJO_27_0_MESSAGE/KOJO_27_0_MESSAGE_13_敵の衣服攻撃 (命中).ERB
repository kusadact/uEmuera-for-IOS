				CALL KOJO_27_0_ADD_MESSAGE, @"「着衣プレイ……なら……　このくらいで……いかがですか……」\n"
			; 服:中破
			ELSE
				CALL KOJO_27_0_ADD_MESSAGE, @"「全部脱いだら……　あたしの身体、たっぷり使ってくださいね……」\n"
				CALL KOJO_27_0_ADD_MESSAGE, @"「もうちょっとで……　全部……　脱げちゃいます……」\n"
			ENDIF
			RETURN 1
		ENDSELECT
	ENDIF

	; 通常時
	; 服:新品
	IF (BASE:CP * 100 / MAXBASE:CP) >= 100
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「あら？　着衣プレイは嫌いかしら？」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「んもう♥　脱いで欲しいって言えば、自分で脱ぐのに♥」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「もうちょっとやさしく脱がせて欲しいなー♥」\n"
		CASE "発情"
