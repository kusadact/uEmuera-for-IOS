
; ------------------------------------------------------------------------------
; ■ 113 探索でアイテムを見つけた - 36 幸運のお守り
; ------------------------------------------------------------------------------

@KOJO_27_0_SYSTEM_MESSAGE_113_36(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 喪失中は何もしないで帰る
	SIF CFLAG:29
		RETURN 0
	
	; 出来るだけ専用メッセージを見せたいので、優先口上指定
	CALL KOJO_27_0_SET_IMPORTANT_FLAG()
	
	SELECTCASE KOJO_MODE
	CASE "発情"
		CALL KOJO_27_0_ADD_MESSAGE, @"「こんな場所に迷い込んでるってだけで相当不幸なのに、お守りなんて役に立つの？」\n"
	CASEELSE
		CALL KOJO_27_0_ADD_MESSAGE, @"「こんなのより幸運の兎のがすごくない？」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「幸運グッズってよくわかんないのよね、持ってなくても一緒だし」\n"
	ENDSELECT
RETURN 1
