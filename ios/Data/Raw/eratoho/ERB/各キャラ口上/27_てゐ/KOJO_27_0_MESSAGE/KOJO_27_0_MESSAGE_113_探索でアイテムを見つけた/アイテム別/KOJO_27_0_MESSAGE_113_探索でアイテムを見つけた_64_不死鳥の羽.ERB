
; ------------------------------------------------------------------------------
; ■ 113 探索でアイテムを見つけた - 64 不死鳥の羽
; ------------------------------------------------------------------------------

@KOJO_27_0_SYSTEM_MESSAGE_113_64(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
#DIM LCOUNT

	; 喪失中は何もしないで帰る
	SIF CFLAG:29
		RETURN 0
		
	; 出来るだけ専用メッセージを見せたいので、優先口上指定
	CALL KOJO_27_0_SET_IMPORTANT_FLAG()
	
	SELECTCASE KOJO_MODE
	CASEELSE
		CALL KOJO_27_0_ADD_MESSAGE, @"「こんなの、どこぞの焼き鳥屋が居れば取り放題よねぇ」\n"
	ENDSELECT
	CALL KOJO_27_0_FIX_MESSAGE
	
	; キャラクター対応 追加口上
	FOR LCOUNT, 1, CHARANUM
		; 自分と娘は除外
		IF !(NO:LCOUNT == NO:(TARGET) || CFLAG:LCOUNT:104 != 0)
			
			; PTに居る
			IF IN_PT(NO:LCOUNT)
			
				SELECTCASE NO:LCOUNT
				; 妹紅
				CASE 31
					; 喪失中
					IF CFLAG:(GET_ID_FROM_NO(NO:LCOUNT)):29
						CALL KOJO_27_0_ADD_MESSAGE, @"「不死鳥っぽい人間はこのザマだし、この羽本当に効果あるのかしら？」\n"
					; 通常
					ELSE
						CALL KOJO_27_0_ADD_MESSAGE, @"「近くにいる人間から取り放題だと全然レアって感じしないわー\n　いや……　今はまともに力が使えないからレアなのかな？」\n"
						CALL KOJO_27_0_PARAGRAPH_MESSAGE
						CALL KOJO_27_0_ADD_MESSAGE, @"\d%CALLNAME:TARGET%は拾った羽と%CALLNAME:(GET_ID_FROM_NO(NO:LCOUNT))%を、まじまじと見比べている\d\n"
					ENDIF
				ENDSELECT
				
			; PTに居ない
			ELSE

			ENDIF
		ENDIF
	NEXT
RETURN 1
