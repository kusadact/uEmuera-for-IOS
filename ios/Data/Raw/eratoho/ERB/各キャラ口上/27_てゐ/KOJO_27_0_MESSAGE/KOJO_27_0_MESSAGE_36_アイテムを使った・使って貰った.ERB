; □ 54 着替えセット
@KOJO_27_0_SYSTEM_MESSAGE_36_54(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 前の服状態による口上
	; 裸だった
	IF PREV_BASE:3 == 0
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「ああ、服を着てるって安心感があるわ」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「やっぱ裸は良くないわよねえ」\n"
		ENDSELECT
		
	; 新品だった
	ELSEIF PREV_BASE:3 == MAXBASE:3
		SELECTCASE KOJO_MODE
		CASE "強気"
			CALL KOJO_27_0_ADD_MESSAGE, @"「資源が乏しい場所での豪遊だからこそ、おしゃれって感じ？」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「やっぱり新しい服はいいわねー」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「いくら破れてないっていっても、やっぱり清潔な服がいいよねえ」\n"
		ENDSELECT
	
	; 破れていた
	ELSE
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「これで防御は完璧！」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「ほんの少しの傷で大事に至ることだってあるもんね」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「おお、ぴったり♪」\n"
		ENDSELECT
	ENDIF
	
	; 服装による追加口上
	SELECTCASE CFLAG:501
	; 00:いつもの服
	CASE 0
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「やっぱりこの服が一番あたしの魅力を引き出せるのよねー♥」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「何であたしの服が落ちてるのよ…　ううむ、どう考えたって怪しいわ…」\n"
		ENDSELECT
	; 01:普通の服
	CASE 1
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「こういう時こそ長いスカートがいいんだけどね」\n"
		ENDSELECT
	; 02:体操着
	CASE 2
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「人里のそっち系の店で見たことあるわ、この服…」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「あたしが着ても小さいとか誰向けの服なのよコレ…」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「どっかの鬼がこういうの着てたわね」\n"
		ENDSELECT
	; 03:メイド服
	CASE 3
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「吸血鬼のとこの女中さんは大変だねえ…　永遠亭が楽すぎるのかも」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「うわ思った以上に本格的だわコレ」\n"
		ENDSELECT
	; 04:パジャマ
	CASE 4
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「パジャマもいいけど布団が欲しいわ\n　あっという間に万年床みたいになりそうだけどさ…」\n"
		ENDSELECT
	; 05:巫女服
	CASE 5
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「普通の巫女服って新鮮だわ～」\n"
		ENDSELECT
	; 06:スクール水着
	CASE 6
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「まったく、どこで泳げって言うのよ！」\n"
		ENDSELECT
	; 07:マイクロビキニ
	CASE 7
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「ほとんど丸見えじゃない♥　こんなの着て襲われたらどうすんの♥♥」\n"
		CASE "発情"
			CALL KOJO_27_0_ADD_MESSAGE, @"「何も着てないよりはいいけどさ…」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「こ、これ服じゃないでしょ！？」\n"
		ENDSELECT
	; 08:ボディスーツ
	CASE 8
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「こういうの着た怪盗いるわ、あたしは盗みなんてしないけど…\n　せいぜい戸棚のおやつくらいね！」\n"
		ENDSELECT
	; 09:セーラー服
	CASE 9
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「ああ、舟幽霊装束ね」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「どこに海があるってのよ？　幻想郷にも無いっての」\n"
		ENDSELECT
	; 10:半ズボン
	CASE 10
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「やっぱスカートのが好みだなあ」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「う～ん、ちょっと尻尾が窮屈かも…」\n"
		ENDSELECT
	; 11:妊婦服
	CASE 11
		; 妊娠・寄生されている
		IF CFLAG:36 >= 3 || (CFLAG:22 && CFLAG:36 == 0)
			SELECTCASE KOJO_MODE
			CASEELSE
				CALL KOJO_27_0_ADD_MESSAGE, @"「何よこの服、あたしへの当てつけってわけ？」\n"
			ENDSELECT
			
		; 通常状態
		ELSE
			SELECTCASE KOJO_MODE
			CASEELSE
				CALL KOJO_27_0_ADD_MESSAGE, @"「機能的なのはいいけどさ、ここじゃ弱点が増えるだけよね」\n"
			ENDSELECT
		ENDIF
	; 12:ランジェリードレス
	CASE 12
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「こんな服着てたら、誘ってるって思われても仕方ないわよねぇ♥」\n"
		CASE "発情"
			CALL KOJO_27_0_ADD_MESSAGE, @"「やだぁ…　この服、透けすぎ…っ…」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「こんな場所で、誰に見せつけろってのよ…」\n"
		ENDSELECT
	; 13:セーター
	CASE 13
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「あったかくて着心地はいいけど、ベタベタにされたら拭き取りにくそうだなあ」\n"
		ENDSELECT
	; 14:チャイナドレス
	CASE 14
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「可愛いんだけど、ちょっと見えすぎじゃない？\n　大きく動いたら丸見えになっちゃいそう」\n"
		ENDSELECT
	; 15:貞操帯
	CASE 15
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「ふぅ…　しばらくの間気持ちいいのとはお別れかしら…」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「うぇ～、悪趣味～！\n　あたし%TACHI()%を犯そうとする奴らだらけの場所で、コレで身を守れっての？」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「こんなのを付けなきゃいけない日が来るとは思わなかったわ…\n　仕方ないわ、安全第一で行きましょ…」\n"
		ENDSELECT
	; 16:ポイントアーマー
	CASE 16
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「女戦士と触手、って王道よねえ♥」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「お、重い…　けど、防御力は期待できそうね…」\n"
		ENDSELECT
	; 17:園児服
	CASE 17
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「よし、どっからどう見ても園児！\n　オンナの部分まで子供かどうかは保証しないけど♥」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「こういう服が落ちてるって事はさー、小さい子供を犯して喜ぶ変態がいるって事よね♥」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「こう極端な子供服が似合っても、そんなに嬉しくないのよね…」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"（何も言うまい……）\n"
		ENDSELECT
	; 18:エプロン
	CASE 18
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「炊事以外でこんなに役に立つ服があるとは思わなかったわ！」\n"
		ENDSELECT
	; 19:ローブ
	CASE 19
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「杖でも持ってりゃ更にそれっぽいかしら？　杵でもいいかな？」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「ふふん♪　いつもより頭良さそうに見えるんじゃな～い？」\n"
		ENDSELECT
	; 20:ウェディングドレス
	CASE 20
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「ここに迷い込んだのは、全員触手のお嫁さんて事♥　ふふん、尻に敷いてやろうじゃない♥♥」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「このドレスを着て犯されろってことね♥　あたしを食べちゃうお婿さんは誰かしら～♥」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「あたしはやっぱり白無垢のが好みね～♪　まあ西洋風もコレはコレで♪」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「で、誰と誰が結婚するって？」\n"
		ENDSELECT
	; 21:ふんどし
	CASE 21
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「むー…　いつもみたいな下着がいいなあ…」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「この下着、しっぽが締め付けられて苦手なのよね～\n　はかないよりはマシだけどさー」\n"
		ENDSELECT
	; 22:触手服
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「うげ…　これ、本当に服？」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「うわ…　動いてるわよ、この服……」\n"
		ENDSELECT
	; 23:スリングショット
	CASE 23
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「普通の服の下にえっちな格好って、なんかドキドキするぅ♥」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「これが服？　紐の間違いじゃないの？」\n"
		ENDSELECT
	ENDSELECT
	
	; 過去に触手スーツを経験済みなら追加口上あり
	; ただし触手服選択時は除く
	IF GETBIT(CFLAG:900, 2) && CFLAG:501 != 22
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「ちょ～っと期待したんだけどなあ、えっちな服」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「前に着た気持ちいい服、凄かったなぁ…♥」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「この服は普通の服かしら？　それとも気持ちいい服かしら？」\n"
		CASE "発情"
			CALL KOJO_27_0_ADD_MESSAGE, @"（ほっ…　この服は大丈夫みたい…）\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"（今回はちゃんとした服でありますように…）\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「よかった、これは普通の服ね」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「もう変な服はごめんだわ…」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「この服は…　大丈夫よね…？」\n"
		ENDSELECT
	ENDIF
RETURN 1


