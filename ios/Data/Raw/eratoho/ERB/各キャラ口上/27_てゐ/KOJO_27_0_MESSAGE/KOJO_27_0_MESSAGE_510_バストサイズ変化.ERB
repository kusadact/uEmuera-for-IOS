
; ------------------------------------------------------------------------------
; ■ 510 バストサイズ変化
; ------------------------------------------------------------------------------

@KOJO_27_0_SYSTEM_MESSAGE_510(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 媚薬爆弾
	IF KOJO_27_0_GET_PREV_ARG(0, 2) == 517 && KOJO_27_0_GET_PREV_ARG(1, 2) == 1
		; 媚薬爆弾後は強制発情中なので発情以上のみの記述でOK
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「おっぱい、おっきくなっちゃったぁ……♥♥　まだジンジンしてる……っ♥♥」\n"
		CASE "発情"
			CALL KOJO_27_0_ADD_MESSAGE, @"「あ……いﾞっ♥　ひぐぅ……っっ♥♥　おっぱい……がぁ♥♥　あついいぃ……っっ♥♥」\n"
		ENDSELECT
		
	; 通常処理
	ELSE
		; 巨乳化
		IF ARG:2 < ARG:3
			SELECTCASE ARG:3
			; 絶壁
			CASE IS <= -2
				CALL KOJO_27_0_ADD_MESSAGE, @"「何が変わったって言うのよ……」\n"
			; 貧乳
			CASE -1
				CALL KOJO_27_0_ADD_MESSAGE, @"「大きくなった、ってか元に戻った　何だったのかしら」\n"
			; 普乳
			CASE 0
				CALL KOJO_27_0_ADD_MESSAGE, @"「この位あった方が、女の子らしいかしら？」\n"
			; 巨乳
			CASE 1
				SELECTCASE KOJO_MODE
				CASE "淫乱"
					CALL KOJO_27_0_ADD_MESSAGE, @"「これ、ロリ巨乳って奴じゃない？」\n"
				CASE "発情"
					CALL KOJO_27_0_ADD_MESSAGE, @"「うう……　身体とおっぱいの大きさ釣り合ってないよぉ……」\n"
				CASEELSE
					CALL KOJO_27_0_ADD_MESSAGE, @"「いくら大きくなったからって、素直に喜べる気がしないわ……」\n"
				ENDSELECT
				
			; 爆乳
			CASE 2
				SELECTCASE KOJO_MODE
				CASE "淫乱"
					CALL KOJO_27_0_ADD_MESSAGE, @"（これ絶対オスを誘うためにおっきくなってるんだ♥　やらしい♥）\n"
				CASE "発情"
					CALL KOJO_27_0_ADD_MESSAGE, @"「うう……っ……　どんどんおっぱいがエッチになるよぉ……」\n"
				CASEELSE
					CALL KOJO_27_0_ADD_MESSAGE, @"「お……重い……　おっぱいが、重い……」\n"
				ENDSELECT
			ENDSELECT
			
		; 貧乳化
		ELSE
			SELECTCASE ARG:3
			; 絶壁未満
			CASE IS < -2
				CALL KOJO_27_0_ADD_MESSAGE, @"「別に何も変わったように見えないけど……」\n"
			; 絶壁
			CASE -2
				CALL KOJO_27_0_ADD_MESSAGE, @"「何で減ってんのよ！？　ただでさえ小さいのに」\n"
			; 貧乳
			CASE -1
				CALL KOJO_27_0_ADD_MESSAGE, @"「何だかんだで、いつも通りが一番よね　ちょっとだけ残念だけど」\n"
			ENDSELECT
		ENDIF
	ENDIF
RETURN 1
