
; ------------------------------------------------------------------------------
; ■ 22 敵の通常攻撃 (回避)
;    催眠中に通常口上を表示しないよう注意
;    行動阻害されているのに攻撃が当たらないのは違和感があるため
; ------------------------------------------------------------------------------

; □ 汎用口上
@KOJO_27_0_SYSTEM_MESSAGE_22(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	; 睡眠時・喪失時・諦め
	SIF CFLAG:25 || CFLAG:29 || TFLAG:16 == 2
		RETURN 0
		
	; 催眠中
	IF KOJO_27_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			; 催眠深度によって変化
			SELECTCASE CFLAG:43
			CASE 1
				SELECTCASE KOJO_MODE
				CASEELSE
					CALL KOJO_27_0_ADD_MESSAGE, @"（わざと外した？\n　動けない相手に見せつけてるの？）\n"
				ENDSELECT
			CASE 2
				SELECTCASE KOJO_MODE
				CASEELSE
					CALL KOJO_27_0_ADD_MESSAGE, @"（いつでも当てられるってのは解ったわよぉ……\n　抵抗出来ない状態であんな攻撃を喰らったら……）\n"
				ENDSELECT
			CASEELSE
				SELECTCASE KOJO_MODE
				CASEELSE
					CALL KOJO_27_0_ADD_MESSAGE, @"（怖い……！　本当に当たっちゃうっ！　怖い、怖い……っ！！）\n"
				ENDSELECT
			ENDSELECT
			RETURN 1
			
		; 発情・感情操作系
		CASE 1
			RETURN 0
			
		; 無意識・認識操作系
		CASE 2
			; 催眠深度によって変化
			SELECTCASE CFLAG:43
			CASE 1
				SELECTCASE KOJO_MODE
				CASEELSE
					CALL KOJO_27_0_ADD_MESSAGE, @"（動きを縛っておいて攻撃を当てないとか、どういうつもり？）\n"
				ENDSELECT
			CASE 2
				SELECTCASE KOJO_MODE
				CASEELSE
					CALL KOJO_27_0_ADD_MESSAGE, @"「あれ……？　はずれちゃい、ました……」\n"
				ENDSELECT
			CASEELSE
				SELECTCASE KOJO_MODE
				CASEELSE
					CALL KOJO_27_0_ADD_MESSAGE, @"「ごめん……なさい……　当たりにいくべき、なのに……」\n"
				ENDSELECT
			ENDSELECT
			RETURN 1
		ENDSELECT
	ENDIF

	; 多段攻撃の連続回避
	; 発生条件が厳しいので、優先表示
	IF KOJO_27_0_GET_PREV_ARG(0) == 22 && KOJO_27_0_GET_PREV_ARG(1) == ARG:1
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「全然当たんないよ～、やる気あるの～？」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「本当に下手な鉄砲は数打ってもダメね～」\n"
		ENDSELECT
		RETURN 1
	ENDIF
	
	; 多段攻撃の攻撃を回避(前撃は命中)
	; 発生条件が厳しいので、優先表示
	IF KOJO_27_0_GET_PREV_ARG(0) == 12 && KOJO_27_0_GET_PREV_ARG(1) == ARG:1
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「流石に連続命中はないわ」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「危ない……！　今度は避けられた……！」\n"
		ENDSELECT
		RETURN 1
	ENDIF
	
	; 通常回避
	SELECTCASE KOJO_MODE
	CASEELSE
		CALL KOJO_27_0_ADD_MESSAGE, @"「当てる気なら、もうちょっとマジメに攻撃すれば？」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「ウサギって結構すばやいんだからねー！」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「下手っぴだねぇ」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「当たらないよー！」\n"
	ENDSELECT
RETURN 1


