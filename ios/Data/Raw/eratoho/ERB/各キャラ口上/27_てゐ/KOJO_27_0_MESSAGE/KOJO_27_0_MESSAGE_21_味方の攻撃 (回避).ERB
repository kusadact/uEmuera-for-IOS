; □ 汎用口上
@KOJO_27_0_SYSTEM_MESSAGE_21(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 二段攻撃も外す
	IF KOJO_27_0_GET_PREV_ARG(0) == 21
		SELECTCASE KOJO_MODE
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「これはひどい……　じゃ済まないわ……」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「二発ともっ！？」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「もしかして、あたしバカにされてない？」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「なんで当たらないのー！！」\n"
		ENDSELECT
		
	; 通常攻撃を外す
	ELSE
		SELECTCASE KOJO_MODE
		CASE "淫乱"
			CALL KOJO_27_0_ADD_MESSAGE, @"「どうにも手元がブレちゃうわ……」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「あぁん♥　犯されるトコロ、想像しちゃって……　集中できないわよぉ……♥」\n"
		CASE "発情"
			CALL KOJO_27_0_ADD_MESSAGE, @"「はぁ……　はぁ……　あたっ……てよぉっ……」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「うぁ……っ！？　お股、こすれて……っ！？」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「うぅ……　やっぱり当たらない…」\n"
		CASEELSE
			CALL KOJO_27_0_ADD_MESSAGE, @"「なんで当たんないのよー！？」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「なんちゃって　冗談だよ冗談」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「ありゃ！？　外れた！？」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「むぅ、意外とすばやい……」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「ああもう、ちゃんと当たりに来なさいよ！」\n"
			CALL KOJO_27_0_ADD_MESSAGE, @"「もうちょっとトリッキーな動きのがいいかしら？」\n"
		ENDSELECT
	ENDIF
RETURN 1


