
; ------------------------------------------------------------------------------
; ■ 160 MAP表示時 - 13 コスプレ
; ------------------------------------------------------------------------------

@KOJO_27_0_SYSTEM_MESSAGE_160_MAPTALK_13(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	; 裸の方はお帰りください
	SIF BASE:CP <= 0
		RETURN 0
		
	; 衣服に損傷がある状態はコスプレを楽しめるような状況ではないので帰る
	SIF (BASE:CP * 100 / MAXBASE:CP) <= 66
		RETURN 0
		
	; 催眠中
	IF KOJO_27_0_IS_HYPNO()
		; 催眠種類で分岐
		SELECTCASE FLAG:526
		; 拘束・肉体操作系
		CASE 0
			
		; 発情・感情操作系
		CASE 1
			
		; 無意識・認識操作系
		CASE 2
			RETURN 0
		ENDSELECT
	ENDIF
	
	; 服装別
	SELECTCASE CFLAG:501
	; 00:いつもの服
	; 01:普通の服
	; 02:体操着
	; 03:メイド服
	; 04:パジャマ
	; 05:巫女服
	CASE 5
		CALL KOJO_27_0_ADD_MESSAGE, @"「普通の巫女服着てると、何で腋出してるのが当たり前なのか不思議になってくるわ」\n"
		
	; 06:スクール水着
	; 07:マイクロビキニ
	; 08:ボディスーツ
	; 09:セーラー服
	; 10:半ズボン
	CASE 10
		CALL KOJO_27_0_ADD_MESSAGE, @"「ズボンって尻尾が窮屈で苦手なのよねえ」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「いっつもスカートだと、ズボンって窮屈な感じがする」\n"
		
	; 11:妊婦服
	; 12:ランジェリードレス
	; 13:セーター
	; 14:チャイナドレス
	; 15:貞操帯
	; 16:ポイントアーマー
	; 17:園児服
	CASE 17
		CALL KOJO_27_0_ADD_MESSAGE, @"（こんな服着てるの、絶対知り合いには見られたくないわね……）\n"
		
	; 18:エプロン
	; 19:ローブ
	; 20:ウェディングドレス
	CASE 20
		CALL KOJO_27_0_ADD_MESSAGE, @"「綺麗な服なんだけど、機能性からは程遠いわ　スカート長すぎて地面に擦れてるし」\n"
	; 21:ふんどし
	; 22:触手服 - 触装があるのでそっちで
	; 23:スリングショット
	ENDSELECT
RETURN 1
