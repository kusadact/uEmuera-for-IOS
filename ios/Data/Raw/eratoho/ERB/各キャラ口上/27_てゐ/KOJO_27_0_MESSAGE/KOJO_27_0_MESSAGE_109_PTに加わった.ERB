; PT外だと理性度の変動はほぼ起こらないので、基本的に汎用口上が呼び出される
; 汎用以外の口上モードが呼び出されるのは再加入の場合がほとんど
@KOJO_27_0_SYSTEM_MESSAGE_109(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	SELECTCASE KOJO_MODE
	CASE "淫乱"
		CALL KOJO_27_0_ADD_MESSAGE, @"「ヤラシイ敵は、あたしが引き受けてあげるわ♥」\n"
	CASE "発情"
		CALL KOJO_27_0_ADD_MESSAGE, @"「えっと……　足手まといには、ならないよう気をつけるね……」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「ちゃ、ちゃんと役に立つから……　よろしくお願い……します……」\n"
	CASEELSE
		CALL KOJO_27_0_ADD_MESSAGE, @"「あたしが幸運を分けてあげるわ、こんな場所あっという間に脱出よ」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「あたしを連れて行けば絶対幸せになれるからね」\n"
		CALL KOJO_27_0_ADD_MESSAGE, @"「あたしも独りじゃキツイし助かるわ」\n"
	ENDSELECT
RETURN 1
