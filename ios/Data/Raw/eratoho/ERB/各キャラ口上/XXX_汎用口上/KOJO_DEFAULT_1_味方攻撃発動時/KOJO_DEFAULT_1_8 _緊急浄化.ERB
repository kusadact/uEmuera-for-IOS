; ////////////////////////////
; / ARG:0    1    味方の攻撃(発動時)
; / ARG:1    8    コマンドID(緊急浄化)
; / ARGS:0        自分の名前
@KOJO_DEFAULT_1_8(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
	
	CALL ADD_RAND_MESSAGE, @"「不在稍微有利的地方战斗不行」"
	
	; 性格別 追加口上
	SELECTCASE CFLAG:100
	CASE 性格_おてんば
		CALL ADD_RAND_MESSAGE, @"「稍微好转一点吧」"
	CASE 性格_きれもの
		CALL ADD_RAND_MESSAGE, @"「走个弯路也没关系」"
		CALL ADD_RAND_MESSAGE, @"「不喜欢干净的地方吧？」"
	CASE 性格_セクシーギャル
		CALL ADD_RAND_MESSAGE, @"「周围这样无法集中精力对付对手吧？」"
	CASE 性格_ねっけつかん
		CALL ADD_RAND_MESSAGE, @"「周围的小鱼儿碍事啊」"
	CASE 性格_のんきもの
		CALL ADD_RAND_MESSAGE, @"「嘛，就这样吧」"
	CASE 性格_わがまま
		CALL ADD_RAND_MESSAGE, @"「虽然不太喜欢迂回的方法」"
	CASE 性格_ひっこみじあん
		CALL ADD_RAND_MESSAGE, @"「这样稍微……」"
	ENDSELECT
	
	; 部屋の汚染度別 追加口上
	; 口上呼び出し关于浄化前に発生する為、汚染度关于浄化前を考慮
	SELECTCASE BATTLE_POLUTION()
	; 敵が苦しむ程度
	CASE 0, 1
		CALL ADD_RAND_MESSAGE, @"「差不多该集中精力战斗了吧」"
	; 敵が回復する程度
	CASE 3, 4
		CALL ADD_RAND_MESSAGE, @"「真是脏啊」"
		CALL ADD_RAND_MESSAGE, @"「再稍微容易战斗一点吧」"
	; 汚染度MAX
	CASE 5
		CALL ADD_RAND_MESSAGE, @"「在这种地方无法战斗」"
	ENDSELECT
RETURN 1


