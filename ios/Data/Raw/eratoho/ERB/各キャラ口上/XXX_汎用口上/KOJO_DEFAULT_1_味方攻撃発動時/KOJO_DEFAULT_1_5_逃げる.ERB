; / ARG:0    1    味方の攻撃(発動時)
; / ARG:1    5    コマンドID(逃げる)
; / ARG:2    0    逃走成功フラグ 0:失敗
; / ARGS:0        自分の名前

;逃走失敗時
@KOJO_DEFAULT_1_5_0(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	CALL ADD_RAND_MESSAGE, @"「这样就逃不掉了……！」"
	CALL ADD_RAND_MESSAGE, @"「咕、被包围了！」"
	CALL ADD_RAND_MESSAGE, @"「被包围了……！！」"

	CALL ADD_RAND_MESSAGE, @"「地形变了！？」"

	CALL ADD_RAND_MESSAGE, @"「瞄准脚了！？」"
	CALL ADD_RAND_MESSAGE, @"「呃，脚已经！？」"


	; 性格別 追加口上
	SELECTCASE CFLAG:100
	CASE 性格_おてんば
		CALL ADD_RAND_MESSAGE, @"「哇……脚好快啊！」"
	CASE 性格_おせっかい
		CALL ADD_RAND_MESSAGE, @"（如果逃跑袭击其他人的话……）"
	CASE 性格_きれもの
		CALL ADD_RAND_MESSAGE, @"「为了不让猎物逃跑而进行的动作真是迅速啊」"
		CALL ADD_RAND_MESSAGE, @"「什么时候退路被堵住了！？」"
	CASE 性格_セクシーギャル
		CALL ADD_RAND_MESSAGE, @"「……如果分别的时候时间能停止就好了」"
		CALL ADD_RAND_MESSAGE, @"「……对方还有很多余裕呢」"
		CALL ADD_RAND_MESSAGE, @"「被这样带进来的话，恐怕不能白白回去了吧」"
	CASE 性格_ぬけめがない
		CALL ADD_RAND_MESSAGE, @"「这么容易就不让逃跑啊」"
		CALL ADD_RAND_MESSAGE, @"「什么时候退路被堵住了！？」"
	CASE 性格_ねっけつかん
		CALL ADD_RAND_MESSAGE, @"「呃，被包围了！」"
		CALL ADD_RAND_MESSAGE, @"「能不能轻易地放我逃走呢……但是！」"
	CASE 性格_ひっこみじあん
		CALL ADD_RAND_MESSAGE, @"（不，不要……这样下去的话……）"
		CALL ADD_RAND_MESSAGE, @"（呜呜……逃不掉了……）"
		CALL ADD_RAND_MESSAGE, @"「呀，呀！？　放我逃走啊！？」"
		CALL ADD_RAND_MESSAGE, @"「请，请放过我～」"
		
	ENDSELECT
	
	; 煙幕・砂煙時 追加口上
	IF CFLAG:26 || CFLAG:27
		CALL ADD_RAND_MESSAGE, @"「这，这样什么都看不见……」"
		CALL ADD_RAND_MESSAGE, @"「咳咳」"
		; 性格別 追加口上
		SELECTCASE CFLAG:100
		CASE 性格_きれもの
			CALL ADD_RAND_MESSAGE, @"「看不到周围也很难逃跑啊」"
		CASE 性格_ぬけめがない
			CALL ADD_RAND_MESSAGE, @"（攻击不容易，逃跑也很困难，真是个麻烦的蒙眼）"
		CASE 性格_ひっこみじあん
			CALL ADD_RAND_MESSAGE, @"「不要……不知道该往哪边走……」"
		ENDSELECT
	ENDIF
	
	; 包囲中 追加口上
	IF CFLAG:200
		CALL ADD_RAND_MESSAGE, @"「完全被包围了！」"
		CALL ADD_RAND_MESSAGE, @"「被包围了……不会是假的吧！？」"
		
		; 性格別 追加口上
		SELECTCASE CFLAG:100
		CASE 性格_おてんば
			CALL ADD_RAND_MESSAGE, @"「呃呃，真的吗」"
			CALL ADD_RAND_MESSAGE, @"「包围歼灭阵吗……！」"
		CASE 性格_きれもの
			CALL ADD_RAND_MESSAGE, @"（迟早会有机会的……）"
			CALL ADD_RAND_MESSAGE, @"（冷静观察的话……一定会有突破口的……！）"
		CASE 性格_ねっけつかん
			CALL ADD_RAND_MESSAGE, @"「我会教你什么叫狮子身中的虫……！」"
			CALL ADD_RAND_MESSAGE, @"「咦……这样一来……！　能够突破一点……但是……！」"
		CASE 性格_ひっこみじあん
			CALL ADD_RAND_MESSAGE, @"（被包围了，没有逃跑的地方了……）"
		ENDSELECT
	ENDIF
	
	; 逃走成功率25%以下なら追加口上
	IF GET_ESCAPE_RATE(TARGET) <= 25
		CALL ADD_RAND_MESSAGE, @"「果然很困难啊……」"
		CALL ADD_RAND_MESSAGE, @"「虽然知道的……」"
		
		; 性格別 追加口上
		SELECTCASE CFLAG:100
		CASE 性格_おてんば
			CALL ADD_RAND_MESSAGE, @"「本以为可以成功的」"
		CASE 性格_きれもの
			CALL ADD_RAND_MESSAGE, @"「虽然知道是不切实际的尝试……」"
		CASE 性格_ねっけつかん
			CALL ADD_RAND_MESSAGE, @"「只凭斗志也无法改变什么……」"
			CALL ADD_RAND_MESSAGE, @"「进退两难了吗……」"
		CASE 性格_ひっこみじあん
			CALL ADD_RAND_MESSAGE, @"「果然还是不行呢……」"
		ENDSELECT
	ENDIF
	
	; 逃走成功率75%以上なら追加口上
	IF GET_ESCAPE_RATE(TARGET) >= 75
		CALL ADD_RAND_MESSAGE, @"「本以为可以轻易逃脱的……」"
		CALL ADD_RAND_MESSAGE, @"（现在这样还不行吗……？）"
		
		; 性格別 追加口上
		SELECTCASE CFLAG:100
		CASE 性格_おてんば
			CALL ADD_RAND_MESSAGE, @"「哇～你做得很好嘛！」"
		CASE 性格_きれもの
			CALL ADD_RAND_MESSAGE, @"「没想到会失败呢」"
		CASE 性格_ねっけつかん
			CALL ADD_RAND_MESSAGE, @"「阻止了现在的攻击……做得很不错」"
		CASE 性格_ひっこみじあん
			CALL ADD_RAND_MESSAGE, @"「唔，因为我太笨拙了……」"
		ENDSELECT
	ENDIF
RETURN 1


