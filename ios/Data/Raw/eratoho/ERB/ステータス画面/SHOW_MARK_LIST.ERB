;現在の刻印を表示

@SHOW_MARK_LIST(ARG:0)
;ARG:0	対象キャラID

PRINTFORML 已経入手的屈服刻印
FOR LOCAL:0, 0, 22
	IF MARK:(ARG:0):(LOCAL:0)
		IF LOCAL:0 != 20
			PRINTFORM %MARKNAME:(LOCAL:0),16,LEFT%
		;寵物に完全敗北した時の刻印なので寵物名を表示する
		ELSEIF LOCAL:0 == 20
			PRINTFORM 被%PETNAME,16,LEFT%
		ENDIF
		IF CFLAG:(ARG:0):(210 + LOCAL:0)
			PRINTFORM 第{CFLAG:(ARG:0):(210 + LOCAL:0)}日
		ENDIF
		IF CFLAG:(ARG:0):(211 + LOCAL:0)
			PRINTFORM 由%ENEMY_NAME(CFLAG:(ARG:0):(211 + LOCAL:0))%
		ENDIF
		PRINTFORML 刻在身心之上
	ELSE
		SETCOLOR 0x333333
		PRINTFORML ---
		RESETCOLOR
	ENDIF
NEXT
PRINTL
