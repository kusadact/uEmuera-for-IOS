@SYSTEM_MESSAGE_400(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)
SETCOLOR 0x10EEEE

SELECTCASE PET:50
	;何もしない
	CASE 0
		SELECTCASE RAND:12
			CASE 0 TO 5
				PRINTFORML %PETNAME%什么也没做……
			CASE 6
				PRINTFORML %PETNAME%在静观事态发展……
			CASE 7
				PRINTFORML %PETNAME%在发呆……
			CASE 8
				PRINTFORML %PETNAME%为%CALLNAME:1%%TACHI()%应援着……
			CASE 9
				PRINTFORML %PETNAME%在跳舞……
			CASE 10
				PRINTFORML %PETNAME%在打哈欠……
			CASE 11
				PRINTFORML %PETNAME%正在惊慌失措……
		ENDSELECT

	;汎用攻撃
	CASE 100, 120, 140
		PRINTFORML %PETNAME%重视着命中发起了攻击！
	CASE 101, 121, 141
		PRINTFORML %PETNAME%发出了平衡的攻击！
	CASE 102, 122, 142
		PRINTFORML %PETNAME%发出了重视威力的攻击！
	CASE 105, 125, 145
		PRINTFORML %PETNAME%瞄准对方的脚攻击着！
	CASE 106, 126, 146
		PRINTFORML %PETNAME%为了限制敌人的行动而进行了攻击！
	CASE 107, 127, 147
		PRINTFORML %PETNAME%瞄准对方的要害进行了攻击！
	CASE 108, 128, 148
		PRINTFORML %PETNAME%连续攻击了几次！
	CASE 109, 129, 149
		PRINTFORML %PETNAME%向全体敌人发动了攻击！

	;固有スキル
	CASE 200
		PRINTFORML %PETNAME%用触手淹没了%SAVESTR:(PET:51)%！
	CASE 201
		PRINTFORML %PETNAME%咬了%SAVESTR:(PET:51)%一口！
	CASE 202
		PRINTFORML %PETNAME%不知从哪里召来了海啸！
	CASE 203
		PRINTFORML %PETNAME%覆盖住了%SAVESTR:(PET:51)%！
		PRINTFORML 就这样慢慢地开始夺取力量……！
	CASE 204
		PRINTFORML %PETNAME%は散发出妖艳的香味来引诱敌人！
	CASE 205
		PRINTFORML %PETNAME%释放了具有治愈效果的孢子！
	CASE 206
		PRINTFORML %PETNAME%阻挡了%SAVESTR:(PET:51)%的视线！
	CASE 207
		PRINTFORML %PETNAME%创造出丝线、切断了%SAVESTR:(PET:51)%的要害！
	CASE 208
		PRINTFORML %PETNAME%发出了令人毛骨悚然的娇声！
	CASE 209
		PRINTFORML %PETNAME%把精液像机关枪一样射了出来！
	CASE 210
		PRINTFORML %PETNAME%挥舞着触手、像大炮一样射出了粘在身上的耻垢！
	CASE 211
		PRINTFORML %PETNAME%展开了快速的连续攻击！
	CASE 212
		PRINTFORML %PETNAME%活用巨大的身体、压在了敌人身上！
	CASE 213
		PRINTFORML %PETNAME%把至今为止%CALLNAME:1%%TACHI()%遭受的凌辱的记录历历在目地展示了出来！
	CASE 214
		PRINTFORML %PETNAME%催眠了%CALLNAME:1%%TACHI()%！
	CASE 215
		PRINTFORML %PETNAME%吸取了%SAVESTR:(PET:51)%的体力！
	CASE 216
		PRINTFORML %PETNAME%放出了神秘的攻击！
		PRINTFORML %PETNAME%的　攻击的　真身　无法确定！
	CASE 217
		PRINTFORML %PETNAME%跳起了让人失去干劲的舞蹈！
	CASE 218
		PRINTFORML %PETNAME%取出喇叭，吹响了雄壮而淫靡的旋律!
	CASE 219
		PRINTFORML %PETNAME%开始到处打下雷电来！
	CASE 220
		PRINTFORML %PETNAME%唱起了清亮的旋律！
		PRINTFORML 总觉得房间也变得干净了……
	CASE 221
		PRINTFORML %PETNAME%放出了大量的狐火！
	CASE 222
		PRINTFORML %PETNAME%喷射出大量冷气、冻住了%SAVESTR:(PET:51)%！
	CASE 223
		PRINTFORML %PETNAME%利用数量的优势、向%SAVESTR:(PET:51)%袭来！
	;小悪魔追加
	CASE 224
		PRINTFORM %PETNAME%
		IF NO:1 == 8
			LOCAL = 1
		ELSEIF NO:(FLAG:10) == 8
			LOCAL = FLAG:10
		ELSEIF NO:(FLAG:10) == 8
			LOCAL = FLAG:11
		ELSE
			LOCAL = 1
		ENDIF
		PRINTFORML 为了掩护%CALLNAME:LOCAL%而放出了弹幕！
	;YMあなた追加
	CASE 225
		PRINTFORML %PETNAME%不知道从哪里拿出了各种各样的玩具
		PRINTFORML 根据现有的情况调教着%SAVESTR:(PET:51)%！
	;回復系
	CASE 300, 301, 302, 320, 321, 322, 340, 341, 342
		PRINTFORML %PETNAME%回复了%CALLNAME:(PET:51)%！
	;回復弁当
	CASE 343
		IF FLAG:AUTOMODE
			PRINTFORML %PETNAME%自己做了顿料理！
			TWAIT FLAG:AUTOMODE * 400, 0
		ELSE
			PRINTFORMW  %PETNAME%自己做了顿料理！
		ENDIF

		PRINTL 那么……这是难得的料理。
		IF FLAG:AUTOMODE
			PRINTL 是按计划在触手宫卖掉呢、还是一个人在这里吃掉呢……
			TWAIT FLAG:AUTOMODE * 400, 0
		ELSE
			PRINTW  是按计划在触手宫卖掉呢、还是一个人在这里吃掉呢……
		ENDIF

		PRINTL （怎么办？）
		DRAWLINE
		PRINTL [0] - 难得的料理、自己吃掉吧
		PRINTFORML [1] - 先让%CALLNAME:(PET:51)%吃
		PRINTL [2] - 卖掉
		DRAWLINE
		PRINTL 1
		IF FLAG:AUTOMODE
			PRINTFORML %CALLNAME:(PET:51)%的体力回复了！
			TWAIT FLAG:AUTOMODE * 400, 0
		ELSE
			PRINTFORMW  %CALLNAME:(PET:51)%的体力回复了！
		ENDIF

	CASE 344
		IF FLAG:AUTOMODE
			PRINTFORML %PETNAME%自己做了顿料理！
			TWAIT FLAG:AUTOMODE * 400, 0
		ELSE
			PRINTFORMW  %PETNAME%自己做了顿料理！
		ENDIF

		PRINTL 那么……这是难得的料理。
		IF FLAG:AUTOMODE
			PRINTL 是按计划在触手宫卖掉呢、还是一个人在这里吃掉呢……
			TWAIT FLAG:AUTOMODE * 400, 0
		ELSE
			PRINTW  是按计划在触手宫卖掉呢、还是一个人在这里吃掉呢……
		ENDIF

		PRINTL （怎么办？）
		DRAWLINE
		PRINTL [0] - 难得的料理、自己吃掉吧
		PRINTFORML [1] - 先让%CALLNAME:(PET:51)%吃
		PRINTL [2] - 卖掉
		DRAWLINE
		PRINTL 1
		IF FLAG:AUTOMODE
			PRINTFORML 刚一送进嘴里、%CALLNAME:(PET:51)%的身体就好像烧了起来一样！
			PRINTFORML %CALLNAME:(PET:51)%的体力回复了……
			TWAIT FLAG:AUTOMODE * 400, 0
		ELSE
			PRINTFORMW  刚一送进嘴里、%CALLNAME:(PET:51)%的身体就好像烧了起来一样！
			PRINTFORMW  %CALLNAME:(PET:51)%的体力回复了……
		ENDIF

		;◆発情レベル追加
		IF CFLAG:(PET:51):28 < 3
			CFLAG:(PET:51):28 += 1
		ENDIF
		;◆◆
		
	;例外出ちゃった
	CASEELSE
		PRINTFORML 哎哟? 不可能的技能ID被指定了
ENDSELECT
RESETCOLOR
