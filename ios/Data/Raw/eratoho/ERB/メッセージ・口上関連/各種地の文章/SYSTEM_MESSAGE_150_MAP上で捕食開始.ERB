;捕食開始時の描写
@SYSTEM_MESSAGE_150(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

SELECTCASE ARG:1
	CASE 0
IF FLAG:AUTOMODE
    PRINTFORML (SYSTEM_MESSAGE_150)敌人的ID不正确 ({ARG:1}, %ARGS:0%, %ARGS:1%, {ARG:2}, {ARG:3}, {ARG:4}, {ARG:5}, {ARG:6})
    TWAIT FLAG:AUTOMODE * 400, 0
ELSE
    PRINTFORMW  (SYSTEM_MESSAGE_150)敵のIDが不正です ({ARG:1}, %ARGS:0%, %ARGS:1%, {ARG:2}, {ARG:3}, {ARG:4}, {ARG:5}, {ARG:6})
ENDIF

	CASEELSE
IF FLAG:AUTOMODE
    PRINTFORML 被抛弃的%ARGS:0%、在无法抵抗新出现的%ARGS:1%的情况下被抓住了…
    TWAIT FLAG:AUTOMODE * 400, 0
ELSE
    PRINTFORMW  被抛弃的%ARGS:0%、在无法抵抗新出现的%ARGS:1%的情况下被抓住了…
ENDIF

ENDSELECT

