;寄生侵食発生
@SYSTEM_MESSAGE_445(ARG:0, ARG:1, ARGS:0, ARGS:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6)

	;寄生時
	IF ARG:1 == 0
		PRINTFORML %ARGS:0%的体内被植入了什么！
IF FLAG:AUTOMODE
    PRINTFORML 
    TWAIT FLAG:AUTOMODE * 400, 0
ELSE
    PRINTFORMW  
ENDIF

	;侵食進行（すでに植え付けられた状態でまた寄生された場合）
	ELSEIF ARG:1 == 1
		PRINTFORML 植入%ARGS:0%体内的某种东西继续成长着！
IF FLAG:AUTOMODE
    PRINTFORML 
    TWAIT FLAG:AUTOMODE * 400, 0
ELSE
    PRINTFORMW  
ENDIF

	;侵食進行（エンドフェイズに寄生が侵食する場合）
	;初期
	ELSEIF ARG:1 == 2
		PRINTFORML %ARGS:0%的身体里有什么在搏动……
IF FLAG:AUTOMODE
    PRINTFORML 
    TWAIT FLAG:AUTOMODE * 400, 0
ELSE
    PRINTFORMW  
ENDIF

	;それ以降
	ELSEIF ARG:1 == 3
		PRINTFORML 植入%ARGS:0%体内的什么东西正蠕动着！
IF FLAG:AUTOMODE
    PRINTFORML 
    TWAIT FLAG:AUTOMODE * 400, 0
ELSE
    PRINTFORMW  
ENDIF

	;きのこ系イベントによる侵食
	;汚染部屋睡眠
	ELSEIF ARG:1 == 4
		PRINTFORML 痛苦地喘息着的%ARGS:0%的身体、被污浊的空气侵入了……
IF FLAG:AUTOMODE
    PRINTFORML 
    TWAIT FLAG:AUTOMODE * 400, 0
ELSE
    PRINTFORMW  
ENDIF

	;汚染部屋戦闘
	ELSEIF ARG:1 == 5
		PRINTFORML 长在被污染的房间里的蘑菇状触手散播着孢子……
		PRINTFORML 
	;敵の攻撃の追加効果
	;白濁液飲ませる
	ELSEIF ARG:1 == 6
		PRINTFORML %ARGS:0%的喉咙里、有什么不同于液体的小异物流了进去……
		PRINTFORML 
	ENDIF


